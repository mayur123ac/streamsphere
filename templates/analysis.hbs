<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StreamSphere - Admin Analytics</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/homepage.css" />
    <style>
        :root {
            --bg-dark: #141414;
            --bg-panel: #1f1f1f;
            --text-white: #ffffff;
            --text-gray: #b3b3b3;
            --streamsphere: blueviolet;
            --green-accent: #2ed573;
            --blue-accent: #2e86de;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-white);
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 20px;
        }

        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 20px;
            border-bottom: 1px solid #333;
            margin-bottom: 30px;
        }

        .logo {
            font-weight: 800;
            font-size: 1.5rem;
            color: var(--streamsphere);
            text-transform: uppercase;
        }

        .back-btn {
            text-decoration: none;
            color: white;
            font-size: 0.9rem;
            background: #333;
            padding: 8px 15px;
            border-radius: 4px;
        }

        .back-btn:hover {
            background: #444;
        }

        /* KPI Cards */
        .kpi-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
            margin-top: 10vh;
        }

        .kpi-card {
            background: var(--bg-panel);
            padding: 20px;
            border-radius: 10px;
            border: 1px solid #333;
            text-align: center;
        }

        .kpi-title {
            font-size: 0.85rem;
            color: var(--text-gray);
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .kpi-value {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
        }

        .kpi-value.red {
            color: var(--streamsphere);
        }

        .kpi-value.green {
            color: var(--green-accent);
        }

        .kpi-value.blue {
            color: var(--blue-accent);
        }

        /* User Table */
        .table-container {
            background: var(--bg-panel);
            border-radius: 12px;
            border: 1px solid #333;
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            background: #111;
            color: var(--text-gray);
            font-weight: 600;
            text-align: left;
            padding: 15px 20px;
            font-size: 0.85rem;
            border-bottom: 1px solid #333;
        }

        td {
            padding: 15px 20px;
            border-bottom: 1px solid #2a2a2a;
            font-size: 0.9rem;
            vertical-align: middle;
        }

        tr:last-child td {
            border-bottom: none;
        }

        tr:hover {
            background-color: #2a2a2a;
        }

        /* Custom Badges */
        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .avatar {
            width: 35px;
            height: 35px;
            background: #333;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 0.9rem;
        }

        .genre-badge {
            background: rgba(46, 134, 222, 0.15);
            color: var(--blue-accent);
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .screen-time-bar {
            background: #333;
            height: 6px;
            width: 100px;
            border-radius: 3px;
            overflow: hidden;
            margin-top: 5px;
        }

        .screen-time-fill {
            height: 100%;
            background: var(--green-accent);
        }

        .stat-sub {
            font-size: 0.75rem;
            color: #777;
        }

        /* --- SEARCH BAR --- */
        .controls-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .search-bar-container {
            position: relative;
            max-width: 400px;
            width: 100%;
        }

        #userSearchInput {

            width: 80%;
            padding: 12px 15px;
            padding-left: 40px;
            /* Space for icon */
            background-color: var(--bg-panel);
            border: 1px solid #333;
            border-radius: 50px;
            color: white;
            font-size: 0.95rem;
            outline: none;
            transition: 0.3s;
        }

        #userSearchInput:focus {
            border-color: var(--streamsphere);
            box-shadow: 0 0 8px rgba(229, 9, 20, 0.3);
        }

        .search-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-gray);
            font-size: 1.1rem;
        }
    </style>
</head>

<body>
    <div class="navbar" id="header">
        <div class="logo hidden1">
            <img src="/assets/hand1.png" alt="Streamsphere.png" />
        </div>

        <div class="menu-toggle" id="menu-toggle">
            <span></span><span></span><span></span>
        </div>

        <ul class="hidden1 nav-links">
            <a href="/homepage">
                <li>Movies</li>
            </a>
            <a href="/searchpg">
                <li>Search</li>
            </a>
            <a href="/mylist">
                <li>My List</li>
            </a>




            <li class="admin-trigger" id="analyticsBtn">
                <a href="/analysis" style="color: blue;">Analytics</a>
            </li>

            <a href="/series">
                <li>TV Shows</li>
            </a>
        </ul>

        <div class="profile-container">
            <div class="profile-icon">
                <img src="https://net51.cc/pv/assets/prime-user.png" alt="Profile">
                <span class="caret">‚ñº</span>
            </div>
            <div class="profile-dropdown hidden2">
                <div class="profile-header">
                    <img src="https://net51.cc/pv/assets/prime-user.png" alt="Avatar">
                    <div class="profile-text">
                        <span class="profile-name">{{name}}</span>
                        <span class="profile-email">{{email}}</span>
                    </div>
                </div>
                <hr>
                <a href="/account" class="dropdown-item">Account</a>
                <a href="/contactus" class="dropdown-item">SphereBot</a>
                <hr>
                <a href="/logout" class="dropdown-item sign-out">Sign out</a>
            </div>
        </div>
    </div>

    <div class="kpi-grid">
        <div class="kpi-card">
            <div class="kpi-title">Total Users</div>
            <div class="kpi-value" id="totalUsers">0</div>
        </div>
        <div class="kpi-card">
            <div class="kpi-title">Total Watch Hours</div>
            <div class="kpi-value green" id="totalHours">0h</div>
        </div>
        <div class="kpi-card">
            <div class="kpi-title">Most Popular Genre</div>
            <div class="kpi-value blue" id="popGenre">-</div>
        </div>
        <div class="kpi-card">
            <div class="kpi-title">Active Now</div>
            <div class="kpi-value red">12</div>
        </div>
    </div>


    <div class="controls-container">
        <h3 style="margin: 0 0 0 12px;">User Insights</h3>

        <div class="search-bar-container">
            <span class="search-icon">üîç</span>
            <input type="text" id="userSearchInput" placeholder="Search by email or name..." onkeyup="filterUsers()">
        </div>
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>User Profile</th>
                    <th>Top Genre Preference</th>
                    <th>My List</th>
                    <th>Recent Activity</th>
                    <th>Total Screen Time</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                <tr>
                    <td colspan="5" style="text-align:center; padding:30px; color:#777;">Loading user data...</td>
                </tr>
            </tbody>
        </table>
    </div>

    <script>
        // 1. Declare Global Variable
        let allUsersData = [];

        async function fetchAnalytics() {
            try {
                const response = await fetch('/api/admin/analytics-full');
                if (!response.ok) throw new Error("Unauthorized");

                const users = await response.json();

                // 2. Store data globally so Search can use it
                allUsersData = users;

                renderTable(users);
                calculateKPIs(users);
            } catch (error) {
                document.getElementById('userTableBody').innerHTML = `<tr><td colspan="5" style="text-align:center; color:red;">Failed to load data. Ensure you are Admin.</td></tr>`;
            }
        }

        // 3. Search Logic
        function filterUsers() {
            const query = document.getElementById('userSearchInput').value.toLowerCase();

            // Filter the global data array
            const filteredUsers = allUsersData.filter(user =>
                (user.email && user.email.toLowerCase().includes(query)) ||
                (user.name && user.name.toLowerCase().includes(query))
            );

            renderTable(filteredUsers);
        }

        function renderTable(users) {
            const tbody = document.getElementById('userTableBody');
            tbody.innerHTML = "";

            if (users.length === 0) {
                tbody.innerHTML = `<tr><td colspan="5" style="text-align:center; padding:30px; color:#777;">No users found.</td></tr>`;
                return;
            }

            users.forEach(user => {
                const avatarLetter = user.name ? user.name.charAt(0).toUpperCase() : "U";

                // Parse screen time for bar width visual (e.g. "12h 30m" -> width %)
                const hours = parseInt(user.screenTime) || 0;
                const width = Math.min(hours * 2, 100); // Max width at 50 hours

                const row = `
                    <tr>
                        <td>
                            <div class="user-info">
                                <div class="avatar">${avatarLetter}</div>
                                <div>
                                    <div style="font-weight:600;">${user.name || "Unknown"}</div>
                                    <div style="font-size:0.8rem; color:#888;">${user.email}</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="genre-badge">${user.topGenre || "No Data"}</span>
                        </td>
                        <td>
                            <div style="font-weight:600;">${user.myListCount}</div>
                            <div class="stat-sub">Items Saved</div>
                        </td>
                        <td>
                            <div style="font-weight:600;">${user.recentlyPlayedCount}</div>
                            <div class="stat-sub">Movies Watched</div>
                        </td>
                        <td>
                            <div style="font-weight:bold; color:#fff;">${user.screenTime}</div>
                            <div class="screen-time-bar">
                                <div class="screen-time-fill" style="width: ${width}%"></div>
                            </div>
                        </td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });
        }

        function calculateKPIs(users) {
            // 1. Total Users
            document.getElementById('totalUsers').innerText = users.length;

            // 2. Total Hours
            let totalMins = 0;
            users.forEach(u => {
                // simple parse assuming format "Xh Ym"
                const parts = u.screenTime.split(' ');
                const h = parseInt(parts[0]) || 0;
                const m = parseInt(parts[1]) || 0;
                totalMins += (h * 60) + m;
            });
            document.getElementById('totalHours').innerText = Math.floor(totalMins / 60) + "h";

            // 3. Most Pop Genre
            const genreCounts = {};
            users.forEach(u => {
                if (u.topGenre !== "N/A") {
                    genreCounts[u.topGenre] = (genreCounts[u.topGenre] || 0) + 1;
                }
            });

            let max = 0;
            let topG = "N/A";
            for (const [g, count] of Object.entries(genreCounts)) {
                if (count > max) { max = count; topG = g; }
            }
            document.getElementById('popGenre').innerText = topG;
        }

        // Run
        fetchAnalytics();
    </script>
    <script src="/js/homepagescript.js"></script>
    <script src="/js/mobilescript.js"></script>
    <script src="/js/css.js"></script>
</body>

</html>