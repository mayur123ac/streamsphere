        body,
        html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-dark);
            color: white;
            overflow: hidden;
        }

        .chat-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }

        header {
            padding: 20px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-text {
            font-size: 1.5rem;
            font-weight: 600;
            letter-spacing: -1px;
            background: linear-gradient(to right, #fff, #888);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        #chat-flow {
            flex: 1;
            overflow-y: auto;
            padding: 20px 0;
            display: flex;
            flex-direction: column;
            gap: 24px;
            scrollbar-width: none;
        }

        #chat-flow::-webkit-scrollbar {
            display: none;
        }

        .message {
            max-width: 85%;
            line-height: 1.6;
            animation: fadeIn 0.4s ease;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .user-message {
            align-self: flex-end;
            background: #2f2f2f;
            padding: 12px 20px;
            border-radius: 20px;
            color: #efefef;
        }

        .bot-message-container {
            align-self: flex-start;
            display: flex;
            gap: 15px;
            max-width: 90%;
        }

        .bot-avatar {
            min-width: 32px;
            width: 32px;
            height: 32px;
            background: var(--gemini-gradient);
            background-size: 400%;
            border-radius: 50%;
            animation: gradientMove 8s infinite linear;
        }

        @keyframes gradientMove {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .input-wrapper {
            background: #1e1f20;
            border-radius: 30px;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            transition: box-shadow 0.3s;
        }

        .input-wrapper:focus-within {
            box-shadow: 0 0 0 2px #4285f4;
        }

        input {
            flex: 1;
            background: transparent;
            border: none;
            color: white;
            padding: 12px;
            font-size: 16px;
            outline: none;
        }

        .send-btn {
            background: transparent;
            border: none;
            color: #8e918f;
            cursor: pointer;
            font-size: 20px;
            transition: color 0.2s;
        }

        .send-btn:hover {
            color: white;
        }

        .suggestions {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            overflow-x: auto;
            padding-bottom: 5px;
        }

        .suggestion-chip {
            background: #1e1f20;
            border: 1px solid #444;
            padding: 8px 16px;
            border-radius: 10px;
            font-size: 13px;
            cursor: pointer;
            white-space: nowrap;
        }

        .suggestion-chip:hover {
            background: #333;
        }

        .bot-message-content a {
            color: #8ab4f8;
            text-decoration: none;
            font-weight: bold;
            border-bottom: 1px solid rgba(138, 180, 248, 0.3);
        }

        .bot-message-content strong {
            color: #fff;
            font-weight: 600;
        }

        .typing-indicator {
            display: flex;
            align-items: center;
            padding: 10px 0;
        }

        .dot {
            height: 8px;
            width: 8px;
            margin: 0 4px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            animation: bounce 1.4s infinite ease-in-out both;
        }

        .dot:nth-child(1) {
            animation-delay: -0.32s;
        }

        .dot:nth-child(2) {
            animation-delay: -0.16s;
        }

        @keyframes bounce {

            0%,
            80%,
            100% {
                transform: scale(0);
            }

            40% {
                transform: scale(1);
            }
        }
    </style>
</head>

