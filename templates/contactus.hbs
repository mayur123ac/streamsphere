<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StreamSphere | SphereBot AI</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-dark: #0a0a0a;
            --card-bg: #161616;
            --accent-red: #E50914;
            --gemini-gradient: linear-gradient(45deg,
                    #4285f4 0%,
                    #9b72cb 30%,
                    #d96570 60%,
                    #de01de 100%);
        }

        body,
        html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-dark);
            color: white;
            overflow: hidden;
        }

        /* Full Screen Container */
        .chat-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header */
        header {
            padding: 20px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-text {
            font-size: 1.5rem;
            font-weight: 600;
            letter-spacing: -1px;
            background: linear-gradient(to right, #fff, #888);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Messages Area */
        #chat-flow {
            flex: 1;
            overflow-y: auto;
            padding: 20px 0;
            display: flex;
            flex-direction: column;
            gap: 24px;
            scrollbar-width: none;
        }

        #chat-flow::-webkit-scrollbar {
            display: none;
        }

        .message {
            max-width: 85%;
            line-height: 1.6;
            animation: fadeIn 0.4s ease;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .user-message {
            align-self: flex-end;
            background: #2f2f2f;
            padding: 12px 20px;
            border-radius: 20px;
            color: #efefef;
        }

        .bot-message {
            align-self: flex-start;
            display: flex;
            gap: 15px;
        }

        .bot-avatar {
            width: 32px;
            height: 32px;
            background: var(--gemini-gradient);
            background-size: 400%;
            border-radius: 50%;
            animation: gradientMove 8s infinite linear;
        }

        @keyframes gradientMove {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Input Bar */
        .input-wrapper {
            background: #1e1f20;
            border-radius: 30px;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            transition: box-shadow 0.3s;
        }

        .input-wrapper:focus-within {
            box-shadow: 0 0 0 2px #4285f4;
        }

        input {
            flex: 1;
            background: transparent;
            border: none;
            color: white;
            padding: 12px;
            font-size: 16px;
            outline: none;
        }

        .send-btn {
            background: transparent;
            border: none;
            color: #8e918f;
            cursor: pointer;
            font-size: 20px;
            transition: color 0.2s;
        }

        .send-btn:hover {
            color: white;
        }

        /* Suggested Prompts */
        .suggestions {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            overflow-x: auto;
            padding-bottom: 5px;
        }

        .suggestion-chip {
            background: #1e1f20;
            border: 1px solid #444;
            padding: 8px 16px;
            border-radius: 10px;
            font-size: 13px;
            cursor: pointer;
            white-space: nowrap;
        }

        .suggestion-chip:hover {
            background: #333;
        }

        /* Links style */
        .bot-message a {
            color: #8ab4f8;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <div class="chat-container">
        <header>
            <div class="bot-avatar"></div>
            <span class="logo-text">SphereBot AI</span>
        </header>

        <div id="chat-flow">
            <div class="bot-message">
                <div class="message">
                    Hello! I'm SphereBot. I can help you find movies, check your watchlist, or guide you through
                    StreamSphere. What's on your mind?
                </div>
            </div>
        </div>

        <div class="suggestions">
            <div class="suggestion-chip" onclick="quickQuery('Do you have Avengers?')">üé¨ Avengers?</div>
            <div class="suggestion-chip" onclick="quickQuery('What anime is available?')">üèÆ Anime</div>
            <div class="suggestion-chip" onclick="quickQuery('Show me horror movies')">üëª Horror</div>
            <div class="suggestion-chip" onclick="quickQuery('Payment')">$ Payment/Billing</div>
        </div>

        <div class="input-wrapper">
            <input type="text" id="userInput" placeholder="Ask SphereBot..." autocomplete="off">
            <button class="send-btn" onclick="handleSend()">‚û§</button>
        </div>
    </div>

    <script>
        const chatFlow = document.getElementById('chat-flow');
        const userInput = document.getElementById('userInput');

        async function handleSend() {
            const text = userInput.value.trim();
            if (!text) return;

            // Add User Message
            appendMessage(text, 'user-message');
            userInput.value = '';

            // Add Loading State
            const loadingDiv = appendMessage('...', 'bot-message', true);

            try {
                const response = await fetch('/api/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message: text })
                });
                const data = await response.json();

                // Render result (supporting links)
                loadingDiv.innerHTML = data.reply.replace(/(\/\w+)/g, '<a href="$1">$1</a>');
            } catch (err) {
                loadingDiv.innerText = "Connection lost. Please check index.js is running.";
            }
        }

        function appendMessage(text, className, isBot = false) {
            const wrapper = document.createElement('div');
            wrapper.className = isBot ? 'bot-message' : 'user-message message';

            if (isBot) {
                wrapper.innerHTML = `<div class="bot-avatar" style="width:24px; height:24px;"></div><div class="message">${text}</div>`;
                chatFlow.appendChild(wrapper);
                chatFlow.scrollTop = chatFlow.scrollHeight;
                return wrapper.querySelector('.message');
            } else {
                wrapper.innerText = text;
                chatFlow.appendChild(wrapper);
                chatFlow.scrollTop = chatFlow.scrollHeight;
                return wrapper;
            }
        }

        function quickQuery(query) {
            userInput.value = query;
            handleSend();
        }

        userInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') handleSend(); });
    </script>
</body>

</html>