            } else {
                wrapper.className = 'user-message message';
                wrapper.innerText = htmlContent;
            }
            chatFlow.appendChild(wrapper);
            chatFlow.scrollTop = chatFlow.scrollHeight;
        }

        function showTypingIndicator() {
