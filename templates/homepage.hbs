  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const video = document.getElementById("heroVideo");

      // Function to show video
      const showVideo = () => {
        video.classList.add("is-playing");
      };

      // 1. Check if the video is already ready (cached)
      if (video.readyState >= 3) {
        showVideo();
      }

      // 2. Event listener: When video data is loaded and capable of playing
      video.addEventListener("canplaythrough", showVideo);

      // 3. Event listener: Fallback when it actually starts playing
      video.addEventListener("playing", showVideo);

      // 4. Handle Autoplay Promise (Best practice for modern browsers)
      // Sometimes browsers block autoplay to save data/battery
      const playPromise = video.play();

      if (playPromise !== undefined) {
        playPromise.then(_ => {
          // Autoplay started!
          showVideo();
        })
          .catch(error => {
            // Autoplay was prevented or video failed to load.
            // We do nothing here, so opacity stays 0 and the Image is shown.
            console.log("Autoplay prevented or video error. Showing fallback image.");
          });
      }
    });
  </script>
